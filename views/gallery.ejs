<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <%- include ("partials/head") %>

  <title>Linkin Park</title>
</head>

<body>
  <div class="background-logo">
    <%- include ("partials/header") %>
    
    <h1 class="display-1 d-flex justify-content-center">Gallery</h1>


    <div class="d-flex justify-content-center">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width: 40vw">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="w-100 h-100" src="/images/gallery_1.png" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="w-100 h-100" src="/images/gallery_2.jpg" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="w-100 h-100" src="/images/gallery_3.jpg" alt="Third slide">
          </div>
          <div class="carousel-item">
            <img class="w-100 h-100" src="/images/gallery_4.png" alt="Third slide">
          </div>
          <div class="carousel-item">
            <img class="w-100 h-100" src="/images/gallery_5.jpg" alt="Third slide">
          </div>
          <div class="carousel-item">
            <img class="w-100 h-100" src="/images/gallery_6.jpg" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only"></span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only"></span>
        </a>
      </div>
    </div>

    <%- include ("partials/footer") %>
  </div>

  <%- include ("partials/script.ejs") %>
</body>

</html>