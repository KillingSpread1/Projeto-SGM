<!DOCTYPE html>
<html lang="en">

  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <%- include ("partials/head") %>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <title>Linkin Park</title>
  </head>

  <body>
    <div class="background-logo">
      <%- include ("partials/header") %>

      <div class="d-flex justify-content-center">
        <h1 id="gallery-images" class="display-1 d-flex justify-content-center align-items-center">Gallery</h1>

        <!-- Botão de alternância -->
        <div class="d-flex justify-content-center align-items-center ms-5 mt-2">
          <button id="toggleCarouselBtn" class="btn btn-danger">Images/Videos</button>
        </div>
      </div>

      <div class="d-flex justify-content-center">

        <!-- Images -->
        <div id="carouselExampleControlsImages" class="carousel slide" data-ride="carousel" style="width: 40vw">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="w-100 h-100" src="/images/gallery_1.png" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="w-100 h-100" src="/images/gallery_2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="w-100 h-100" src="/images/gallery_3.jpg" alt="Third slide">
            </div>
            <div class="carousel-item">
              <img class="w-100 h-100" src="/images/gallery_4.png" alt="Third slide">
            </div>
            <div class="carousel-item">
              <img class="w-100 h-100" src="/images/gallery_5.jpg" alt="Third slide">
            </div>
            <div class="carousel-item">
              <img class="w-100 h-100" src="/images/gallery_6.jpg" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControlsImages" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only"></span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControlsImages" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only"></span>
          </a>
        </div>

        <!-- Videos -->
        <div id="carouselExampleControlsVideos" class="carousel slide" data-ride="carousel" style="width: 47vw; display: none;">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <video controls class="w-100 h-100">
                <source src="/videos/video_2.mp4" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
            <div class="carousel-item">
              <video controls class="w-100 h-100">
                <source src="/videos/video_3.mp4" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
            <div class="carousel-item">
              <video controls class="w-100 h-100">
                <source src="/videos/video_4.mp4" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
            <div class="carousel-item">
              <video controls class="w-100 h-100">
                <source src="/videos/video_5.mp4" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControlsVideos" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only"></span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControlsVideos" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only"></span>
          </a>
        </div>
      </div>

      <%- include ("partials/footer") %>
    </div>

    <!-- Seu script existente -->
    <%- include ("partials/script.ejs") %>
  </body>

</html>
